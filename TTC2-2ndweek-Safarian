        function renderCandidates(filter = 'all') {
            const grid = document.getElementById('candidatesGrid');
            grid.innerHTML = '';

            let delay = 0;
            candidates.forEach((candidate) => {
                if (filter !== 'all' && candidate.type !== filter) return;

                const card = document.createElement('div');
                card.className = `candidate-card ${candidate.type}`;
                card.style.animation = `slideIn 0.5s ease-out ${delay}s both`;

                const typeLabels = {
                    grammar: 'Grammar',
                    vocabulary: 'Vocabulary',
                    listening: 'Listening',
                    howto: 'How to Begin'
                };

                const resourcesHtml = candidate.resources.length > 0 
                    ? candidate.resources.map(r => `<span class="resource-tag">${r}</span>`).join('')
                    : '<span class="resource-tag" style="opacity:0.5">No materials</span>';

                card.innerHTML = `
                    <div class="card-top">
                        <div class="avatar-wrapper">
                            <div class="avatar-ring" style="border-color: ${candidate.ring}"></div>
                            <div class="avatar" style="background: ${candidate.bg}">
                                ${candidate.emoji}
                            </div>
                        </div>
                        <div class="candidate-info">
                            <div class="candidate-name">${candidate.name}</div>
                            <span class="type-badge ${candidate.type}">${typeLabels[candidate.type]}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="material-info">${candidate.material}</div>
                        <div class="resources">${resourcesHtml}</div>
                    </div>
                `;

                grid.appendChild(card);
                delay += 0.05;
            });
        }

        function filterCandidates(type) {
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            renderCandidates(type);
        }

        function updateStats() {
            const counts = {
                grammar: candidates.filter(c => c.type === 'grammar').length,
                vocabulary: candidates.filter(c => c.type === 'vocabulary').length,
                listening: candidates.filter(c => c.type === 'listening').length,
                howto: candidates.filter(c => c.type === 'howto').length
            };

            document.getElementById('grammarCount').textContent = counts.grammar;
            document.getElementById('vocabCount').textContent = counts.vocabulary;
            document.getElementById('listenCount').textContent = counts.listening;
        }

        renderCandidates();
        updateStats();
    </script>
